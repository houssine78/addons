<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.module.category" id="module_category_belcotax_management">
	    <field name="name">Belcotax</field>
	    <field name="description">Helps you manage your belcotax declaration.</field>
	</record>
	
	<record id="group_belcotax_user" model="res.groups">
	    <field name="name">User</field>
	    <field name="category_id" ref="module_category_belcotax_management"/>
	</record>
	
	<record id="group_belcotax_manager" model="res.groups">
	    <field name="name">Manager</field>
	    <field name="category_id" ref="module_category_belcotax_management"/>
	    <field name="implied_ids" eval="[(4, ref('group_belcotax_user'))]"/>
	    <field name="users" eval="[(4, ref('base.user_root'))]"/>
	</record>
</odoo>