<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="all_picking_pdf_document">
        <t t-set="doc" t-value="doc.with_context({'lang': doc.generated_user_id and doc.generated_user_id.lang or user.lang})" />
        <t t-call="web.external_layout">
        </t>
    </template>

    <template id="all_picking_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="print_all_pdf_attachments_stock_picking.all_picking_pdf_document" t-lang="doc.generated_user_id.lang" />
            </t>
        </t>
    </template>
</odoo>
